<h1>Listing users</h1>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<table>

<% @users.each do |user| %>
  <tr>
    <% if session[:user_id] and session[:user_id] == user.id %>
      <td><%= link_to user.username + " (You)", edit_user_path(user) %></td>
    <% else %>
      <td><%= link_to user.username, user %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
