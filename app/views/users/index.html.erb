<h1>Listing users</h1>

<% @users.each do |user| %>
  <div>
    <%= image_tag @user.pic.url(:thumb) %>  
    <% if session[:user_id] and session[:user_id] == user.id %>
      <%= link_to user.username + " (You)", user %>
    <% else %>
      <%= link_to user.username, user %>
    <% end %>
  <div>
<% end %>

<br />

<%= link_to 'New User', new_user_path %>
