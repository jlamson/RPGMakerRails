<!DOCTYPE html>
<html>
<head>
  <title>RPGMakerRails</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div id="application_header">
    <h1>RPG System Designer</h1>
  </div>

  <div>
    <div id="application_sidebar">
      <ul>
        <% if session[:user_id] %>
          <li><%= button_to "Logout", logout_url, method: :destroy %></li>
        <% else %>
          <li><%= link_to "Login", login_url %></li>
          <li><%= link_to "Register", new_user_url %></li>
        <% end %>
      </ul>
    </div>

    <div id="page_content">
      <%= yield %>
    </div>
  </div>
  
</body>
</html>
