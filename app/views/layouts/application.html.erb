<!DOCTYPE html>
<html>
<head>
  <title>RPGMakerRails</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div id="application_header">
    <h1>RPG System Designer</h1>
  </div>

  <div>
    <div id="application_sidebar">
      <ul>
        <li><%= link_to "Home", root_url %></li>
        <% if session[:user_id] %>
          <li><%= link_to "Users", users_url %></li>
          <li><%= button_to "Logout", logout_url, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", login_url %></li>
          <li><%= link_to "Register", new_user_url %></li>
        <% end %>
      </ul>
    </div>

    <div id="page_content">
      <% if flash[:alert] %>
        <p id="error"><%= flash[:alert] %></p> 
      <% end %>

      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
      
      <%= yield %>
    </div>
  </div>
  
</body>
</html>
